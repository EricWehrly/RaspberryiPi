{
  "display_information": {
    "name": "Jellyfin Request Bot",
    "description": "A Slack bot for managing Jellyfin media requests",
    "background_color": "#2c3e50"
  },
  "features": {
    "bot_user": {
      "display_name": "Jellyfin Bot",
      "always_online": true
    },
    "app_home": {
      "home_tab_enabled": true,
      "messages_tab_enabled": true
    }
  },
  "oauth_config": {
    "scopes": {
      "bot": [
        "channels:history",
        "channels:read",
        "chat:write",
        "groups:history",
        "groups:read",
        "im:history",
        "im:read",
        "mpim:history",
        "mpim:read"
      ]
    }
  },
  "settings": {
    "socket_mode_enabled": true,
    "interactivity": {
      "is_enabled": true
    }
  }
}